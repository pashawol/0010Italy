mixin item-sos(icon, a='#')
	+e.A.item(href= a target="_blank")
		if block
			block
		else
			+icon(icon)
//- social buttons
mixin soc()
	+b.soc
		if block
			block
		else
			+item-sos('vk','https://vk.com/studyitaly')
			+item-sos('fb','https://www.facebook.com/studyitaly.ru/')
			+item-sos('instagram','https://www.instagram.com/studiare_in_italia/')

